generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String  @id @default(cuid())
  email String? @unique

  name       String?
  lastName   String? @map("last_name")
  password   String?
  avatarPath String? @map("avatar_path")
  country    String?
  phone      String?
  city       String?
  activePlanId String? @map("active_plan_id")
  activePlanName String? @map("active_plan_name")
  activePlanPrice Int? @map("active_plan_price")
  activePlanCurrency String? @map("active_plan_currency")
  activePlanPurchasedAt DateTime? @map("active_plan_purchased_at")
  referralCode String? @unique @map("referral_code")
  referralLink String? @map("referral_link")
  referrerId String? @map("referrer_id")
  referrer   User? @relation("UserReferrals", fields: [referrerId], references: [id])
  referrals  User[] @relation("UserReferrals")
  payments Payment[]
  mlmPayoutsReceived MlmPayout[] @relation("MlmPayoutReceiver")
  mlmPayoutsSource MlmPayout[] @relation("MlmPayoutSource")
  wallet Wallet?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  verificationToken String? @default(cuid()) @map("verification_token")

  passwordResetCode    String?   @map("password_reset_code")
  passwordResetExpires DateTime? @map("password_reset_expires")

  rights Role[] @default([USER])
  language String @default("en")

  @@map("users")
}

model Payment {
  id String @id @default(cuid())
  userId String @map("user_id")
  user User @relation(fields: [userId], references: [id])
  planId String @map("plan_id")
  planName String @map("plan_name")
  amount Int
  currency String
  status PaymentStatus @default(PENDING)
  provider PaymentProvider @default(STRIPE)
  stripePaymentIntentId String? @unique @map("stripe_payment_intent_id")
  paypalOrderId String? @unique @map("paypal_order_id")
  mlmPayouts MlmPayout[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("payments")
}

model Setting {
id    String  @id @default(cuid())
key   String  @unique
value String

createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
}

model MlmEngineSetting {
  id        String   @id @default(cuid())
  moduleKey String   @unique @map("module_key")
  settings  Json
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("mlm_engine_settings")
}

model MlmPayout {
  id           String   @id @default(cuid())
  paymentId    String   @map("payment_id")
  payment      Payment  @relation(fields: [paymentId], references: [id])
  receiverId   String   @map("receiver_id")
  receiver     User     @relation("MlmPayoutReceiver", fields: [receiverId], references: [id])
  sourceUserId String   @map("source_user_id")
  sourceUser   User     @relation("MlmPayoutSource", fields: [sourceUserId], references: [id])
  planId       String   @map("plan_id")
  level        Int
  percent      Float
  amount       Int
  currency     String
  moduleKey    String   @default("unilevel") @map("module_key")
  createdAt    DateTime @default(now()) @map("created_at")
  walletTransaction WalletTransaction?

  @@unique([paymentId, receiverId, level], name: "payment_receiver_level")
  @@map("mlm_payouts")
}

model Wallet {
  id        String  @id @default(cuid())
  userId    String  @unique @map("user_id")
  user      User    @relation(fields: [userId], references: [id])
  balance   Int     @default(0)
  currency  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  transactions WalletTransaction[]

  @@map("wallets")
}

model WalletTransaction {
  id        String   @id @default(cuid())
  walletId  String   @map("wallet_id")
  wallet    Wallet   @relation(fields: [walletId], references: [id])
  type      WalletTransactionType
  amount    Int
  currency  String
  payoutId  String?  @unique @map("payout_id")
  payout    MlmPayout? @relation(fields: [payoutId], references: [id])
  paymentId String?  @map("payment_id")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("wallet_transactions")
}

enum Role {
  USER
  MANAGER
  ADMIN
}

enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
  CANCELED
}

enum PaymentProvider {
  STRIPE
  PAYPAL
}

enum WalletTransactionType {
  CREDIT
  DEBIT
}
